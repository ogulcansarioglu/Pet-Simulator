<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:mbn_backgroundBottomColor="@color/purple_200"
        app:mbn_circleColor="@color/white"
        app:mbn_defaultIconColor="@color/white"
        app:mbn_selectedIconColor="@color/purple_200"
        >

    </com.etebarian.meowbottomnavigation.MeowBottomNavigation>

    <RelativeLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="451dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/petView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-2dp"
            android:layout_marginBottom="-7dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/cat" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="94dp"
            android:layout_height="81dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="15dp"
            app:srcCompat="@drawable/ic_foodicon" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="94dp"
            android:layout_height="85dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="158dp"
            android:layout_marginBottom="15dp"
            app:srcCompat="@drawable/ic_playicon" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="94dp"
            android:layout_height="85dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="15dp"
            app:srcCompat="@drawable/ic_healthicon" />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="422dp"
        android:layout_height="232dp"
        android:layout_below="@+id/linear1"

        android:layout_marginStart="-1dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="@color/teal_200"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="185dp"
            android:layout_height="62dp"
            android:layout_alignTop="@+id/progressBar"
            android:layout_marginStart="81dp"
            android:layout_marginTop="86dp"
            android:layout_marginBottom="149dp"
            android:progressBackgroundTint="@color/purple_700"
            android:progressTint="@color/black" />

        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="185dp"
            android:layout_height="62dp"
            android:layout_alignTop="@+id/progressBar"
            android:layout_marginStart="81dp"
            android:layout_marginTop="159dp"
            android:layout_marginBottom="149dp"
            android:progressBackgroundTint="@color/purple_700"
            android:progressTint="@color/black" />


        <TextView
            android:id="@+id/food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="79dp"
            android:layout_marginBottom="188dp"
            android:text="Food" />

        <TextView
            android:id="@+id/mood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="77dp"
            android:layout_marginBottom="109dp"
            android:text="Mood" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="361dp"
            android:layout_marginBottom="108dp"
            android:text="Mood" />

        <TextView
            android:id="@+id/health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="75dp"
            android:layout_marginBottom="34dp"
            android:text="Health" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="358dp"
            android:layout_marginBottom="33dp"
            android:text="Health" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="183dp"
            android:layout_height="74dp"
            android:layout_marginStart="81dp"
            android:layout_marginBottom="149dp"
            android:progressBackgroundTint="@color/purple_700"
            android:progressTint="@color/black" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="367dp"
            android:text="Food" />

    </RelativeLayout>

</FrameLayout>